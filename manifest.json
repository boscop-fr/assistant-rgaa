{
	"manifest_version": 3,
	"name": "Assistant RGAA",
	"description": "Extension de navigateur permettant d'auditer des pages web en suivant le référentiel RGAA.",
	"version": "2.0.0",
	"icons": {
		"48": "img/icon-48.png",
		"96": "img/icon-96.png"
	},
	"action": {
		"default_title": "Assistant RGAA",
		"default_icon": {
			"96": "img/icon-96.png"
		}
	},
	"sidebar_action": {
		"default_title": "Assistant RGAA",
		"default_panel": "pages/default-panel.html",
		"open_at_install": false
	},
	"permissions": [
		"tabs",
		"storage",
		"scripting",
		"sidePanel"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "dist/background.js",
		"scripts": ["dist/background.js"]
	},
	"options_ui": {
		"page": "pages/options.html"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"data/references/3-2016.json",
				"data/references/3-2017.json",
				"data/references/4-2019.json",
				"data/references/4-2021.json",
				"data/references/4-2023.json",
				"dist/minimap-component.js"
			],
			"matches": [
				"<all_urls>"
			]
		}
	],
	"minimum_chrome_version": "121",
	"browser_specific_settings": {
		"gecko": {
		  "strict_min_version": "121"
		}
	 }
}
