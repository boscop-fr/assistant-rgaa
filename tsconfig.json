{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react/jsx-runtime": ["./node_modules/preact/jsx-runtime"],
			"react-dom": ["./node_modules/preact/compat/"]
		},
		"outDir": "./dist/",
		"target": "esnext",
	},
	"include": ["src/**/*", "data/**/*"]
}
